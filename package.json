    "react": "^15.6.1",
    "react-css-modules": "^4.7.1",
    "react-dom": "^15.6.1",
    "react-fontawesome": "^1.6.1",
    "react-helmet": "^5.1.3",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
