{
  "name": "cip-front",
  "version": "0.0.1",
  "author": "Innodata",
  "license": "UNLICENSED",
  "scripts": {
    "start": "yarn && webpack-dev-server --host 0.0.0.0 --port 8081",
    "test": "yarn && yarn lint && yarn test:jest",
    "start:mock": "yarn && concurrently --kill-others \"yarn mock:api\" \"yarn start\"",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "eslint --ext .jsx --ext .js */**",
    "lint:css": "stylelint ./app/**/*.less --syntax less",
    "mock:api": "json-server ./mock/db.js --watch --port 9000 --routes ./mock/routes.json",
    "test:jest": "jest --config jest.config.json --no-cache"
  },
  "jest": {
    "verbose": true,
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js",
      "^.+\\.(gif|ttf|eot|svg|png)$": "<rootDir>/__mocks__/fileMock.js"
    },
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/jest.transform.js"
    }
  },
